<% if notice %>
    <div class="alert alert-info">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="page-header">
  <ul class="list-inline pull-right">
    <li><%= link_to 'Edit', edit_snip_path(@snip), :class => "btn btn-warning" %></li>
    <li><%= link_to 'Back', snips_path, :class => "btn btn-default" %></li>
  </ul>
  <h4><%= @snip.title %></h4>
</div>

<table class="table">
  <tr>
    <td><strong>Context</strong></td>
    <td><%= @snip.context %></td>
  </tr>

  <tr>
    <td><strong>Title</strong></td>
    <td><%= @snip.title %></td>
  </tr>

  <tr>
    <td><strong>Code</strong></td>
    <td><%= @snip.code %></td>
  </tr>

  <tr>
    <td><strong>Url</strong></td>
    <td><%= @snip.url %></td>
  </tr>

  <tr>
    <td><strong>Data</strong></td>
    <td><%= @snip.data %></td>
  </tr>
</table>
