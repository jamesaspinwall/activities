<p id="notice"><%= notice %></p>

<h1>Snips</h1>

<table>
  <thead>
    <tr>
      <th>Context</th>
      <th>Title</th>
      <th>Code</th>
      <th>Url</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snips.each do |snip| %>
      <tr>
        <td><%= snip.context %></td>
        <td><%= snip.title %></td>
        <td><%= snip.code %></td>
        <td><%= snip.url %></td>
        <td><%= snip.data %></td>
        <td><%= link_to 'Show', snip %></td>
        <td><%= link_to 'Edit', edit_snip_path(snip) %></td>
        <td><%= link_to 'Destroy', snip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

