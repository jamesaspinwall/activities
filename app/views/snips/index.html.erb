<p id="notice"><%= notice %></p>

<div class="page-header">
  <%= link_to 'New snip', new_snip_path, :class => "btn btn-info pull-right" %>
  <h4>Snips</h4>
</div>

<div class="row">

  <div class="col-sm-offset-1 col-sm-10">
    <table class="table">
      <thead>

      <tr>
        <th>Context</th>
        <th>Title</th>
        <!--
        <th>Code</th>
        -->
        <th>Url</th>
        <th>Data</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @snips.each do |snip| %>
          <tr>
            <td><%= snip.context %></td>
            <td><%= snip.title %></td>
            <!--
            <td><%= snip.code %></td>
            -->
            <td><%= snip.url %></td>
            <td><%= snip.data %></td>
            <td><%= link_to 'Show', snip, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_snip_path(snip), class: 'btn btn-info' %></td>
            <td><%= link_to 'Destroy', snip, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-info' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


