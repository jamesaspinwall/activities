<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Context</th>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Data</th>
      <th>Complete ts</th>
      <th>Active ts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.context %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.tags %></td>
        <td><%= task.data %></td>
        <td><%= task.complete_ts %></td>
        <td><%= task.active_ts %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

