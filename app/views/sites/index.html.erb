<p id="notice"><%= notice %></p>


<div class="row">

  <div class="col-sm-offset-1 col-sm-10">
    <div class="page-header">
      <%= link_to 'New Site', new_site_path, :class => "btn btn-info pull-right" %>
      <h4>Sites</h4>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th>Content</th>
        <th>Title</th>
        <th>Description</th>
        <th>Url</th>
        <th>Data</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @sites.each do |site| %>
          <tr>
            <td><%= site.content %></td>
            <td><%= site.title %></td>
            <td><%= site.description %></td>
            <td><%= site.url %></td>
            <td><%= site.data %></td>
            <td><%= link_to 'Show', site, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_site_path(site), class: 'btn btn-info' %></td>
            <td><%= link_to 'Destroy', site, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-info'%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

